<div class="section">
    <h1 class="">Portfolio</h1>
    <a class="btn purple darken-4 text-white right" href="/portfolio/add">Add Project</a>
</div>
<div class="divider"></div>
<div class="section">
    <div class="row">
        {{#each projects}}
        <div class="col s12 m9 l3">
            <div class="card sticky-action">
                <div class="card-image waves-effect waves-block waves-light">
                    <img src="portfolio/image/{{this.image}}" alt="">
                </div>
                <div class="card-content center">
                    <span class="card-title grey-text text-darken-4 left-align">{{this.title}}<i
                            class="material-icons right activator ">more_vert</i></span>
                    <a class="btn-flat  white black-text left" href="{{this.livelink}}"> Live</a>
                    <a class="btn-flat white black-text right" href="{{this.designlink}}"> Design</a>
                </div>
                <div class="card-action center">
                    <a class="btn yellow darken-4 text-black left" href="portfolio/edit/{{this.id}}">Edit</a>
                    <form class="form" action="/portfolio/{{this.id}}?_method=DELETE" method="POST">
                        <button class="btn waves-light red right">Delete Project</button>
                    </form>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{this.title}}<i
                            class="material-icons right">close</i></span>
                    <p>{{this.description}}</p>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>
